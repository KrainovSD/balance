{
  "name": "@krainovsd/finances",
  "version": "0.0.1",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "vite --host --force",
    "clear": "rm -rf ./lib",
    "build-ssr": "npm run clear && npm run build:types && npm run build-ssr:js",
    "build-singleton": "npm run clear && npm run build:types && npm run build-singleton:js",
    "build-ssr:js": "vite build",
    "build-singleton:js": "vite build",
    "build:types": "vue-tsc -p tsconfig.build.json",
    "lint": "eslint . -c ./eslint.config.js --color --max-warnings 0",
    "lint-check": "eslint --debug eslint.config.js",
    "format": "prettier --write 'src/**/*.{js,ts,tsx,scss,css,json,vue}'",
    "format-check": "prettier --check ./src",
    "lint-debug": "npx eslint --print-config eslint.config.js > eslint-config-rules.json",
    "type-debug": "tsc --showConfig > typescript-config.json"
  },
  "dependencies": {
    "vue": "3.5.17",
    "vue-router": "4.5.1",
    "pinia": "3.0.2",
    "@krainovsd/js-helpers": "0.15.3",
    "@krainovsd/vue-icons": "0.1.4",
    "@krainovsd/vue-ui": "0.3.0-beta.20",
    "@tanstack/vue-virtual": "3.13.12",
    "dayjs": "1.11.13"
  },
  "devDependencies": {
    "@krainovsd/presets": "0.3.5",
    "rollup": "4.34.9",
    "prettier": "3.6.1",
    "eslint": "9.29.0",
    "typescript": "5.8.3",
    "@types/node": "22.10.2",
    "sass-embedded": "1.89.2",
    "vite": "6.2.1",
    "vue-tsc": "2.2.10",
    "@vitejs/plugin-vue": "5.2.4",
    "vite-plugin-vue-devtools": "7.7.6",
    "@trivago/prettier-plugin-sort-imports": "5.2.2"
  }
}
